<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on below buttons for action"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/hellobutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="hello"
            android:text="hello" />


        <Button
            android:id="@+id/buddybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buddies"
            android:text="Buddy" />

        <Button
            android:id="@+id/parsingbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="parsecontent"
            android:text="Parsing" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/broadcasttbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="broadcasting"
            android:text="Broadcast" />

        <Button
            android:id="@+id/explicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intents"
            android:text="IntentFilter" />
    </LinearLayout>

</LinearLayout>